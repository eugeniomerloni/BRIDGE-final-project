<div>
  <div>
    <h1>
      List of all saved places
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new saved place
    </h2>

    <form action="/insert_saved_place" method="post">
      <div>
        <label for="place_id_box">
          Place
        </label>

        <input type="text" id="place_id_box" name="query_place_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create saved place
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Place
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_saved_places.each do |a_saved_place| %>
      <tr>
        <td>
          <%= a_saved_place.id %>
        </td>

        <td>
          <%= a_saved_place.place_id %>
        </td>

        <td>
          <%= a_saved_place.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_saved_place.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_saved_place.updated_at) %> ago
        </td>

        <td>
          <a href="/saved_places/<%= a_saved_place.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
