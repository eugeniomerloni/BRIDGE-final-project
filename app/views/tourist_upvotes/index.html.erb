<div>
  <div>
    <h1>
      List of all tourist upvotes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new tourist upvote
    </h2>

    <form action="/insert_tourist_upvote" method="post">
      <div>
        <label for="place_id_box">
          Place
        </label>

        <input type="text" id="place_id_box" name="query_place_id">
      </div>

      <div>
        <label for="tourist_id_box">
          Tourist
        </label>

        <input type="text" id="tourist_id_box" name="query_tourist_id">
      </div>

      <button>
        Create tourist upvote
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Place
        </th>

        <th>
          Tourist
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_tourist_upvotes.each do |a_tourist_upvote| %>
      <tr>
        <td>
          <%= a_tourist_upvote.id %>
        </td>

        <td>
          <%= a_tourist_upvote.place_id %>
        </td>

        <td>
          <%= a_tourist_upvote.tourist_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_tourist_upvote.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_tourist_upvote.updated_at) %> ago
        </td>

        <td>
          <a href="/tourist_upvotes/<%= a_tourist_upvote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
