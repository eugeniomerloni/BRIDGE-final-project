<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user
    </h2>

    <form action="/insert_user" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <textarea id="email_box" name="query_email" rows="3"></textarea>
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob">
      </div>

      <div>
        <label for="password_digest_box">
          Password digest
        </label>

        <textarea id="password_digest_box" name="query_password_digest" rows="3"></textarea>
      </div>

      <div>
        <input type="checkbox" id="premium_subscription_box" name="query_premium_subscription" value="1">

        <label for="premium_subscription_box">Premium subscription</label>
      </div>

      <div>
        <label for="hometown_box">
          Hometown
        </label>

        <textarea id="hometown_box" name="query_hometown" rows="3"></textarea>
      </div>

      <button>
        Create user
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Email
        </th>

        <th>
          Dob
        </th>

        <th>
          Password digest
        </th>

        <th>
          Premium subscription
        </th>

        <th>
          Hometown
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.first_name %>
        </td>

        <td>
          <%= a_user.last_name %>
        </td>

        <td>
          <%= a_user.email %>
        </td>

        <td>
          <%= a_user.dob %>
        </td>

        <td>
          <%= a_user.password_digest %>
        </td>

        <td>
          <%= a_user.premium_subscription %>
        </td>

        <td>
          <%= a_user.hometown %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
