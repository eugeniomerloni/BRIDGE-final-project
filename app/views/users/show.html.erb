<div>
  <div>
    <h1>
      User #<%= @the_user.id %> details
    </h1>

    <div>
      <div>
        <a href="/users">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_user/<%= @the_user.id %>">
          Delete user
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_user.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_user.last_name %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_user.email %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_user.dob %>
      </dd>

      <dt>
        Password digest
      </dt>
      <dd>
        <%= @the_user.password_digest %>
      </dd>

      <dt>
        Premium subscription
      </dt>
      <dd>
        <%= @the_user.premium_subscription %>
      </dd>

      <dt>
        Hometown
      </dt>
      <dd>
        <%= @the_user.hometown %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit user
    </h2>

    <form action="/modify_user/<%= @the_user.id %>"  method="post" >
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_user.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_user.last_name %>">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <textarea id="email_box" name="query_email"><%= @the_user.email %></textarea>
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob" value="<%= @the_user.dob %>">
      </div>

      <div>
        <label for="password_digest_box">
          Password digest
        </label>

        <textarea id="password_digest_box" name="query_password_digest"><%= @the_user.password_digest %></textarea>
      </div>

      <div>
        <input type="checkbox" id="premium_subscription_box" name="query_premium_subscription" value="1" <%= "checked" if @the_user.premium_subscription %>>

        <label for="premium_subscription_box">
            Premium subscription
        </label>
      </div>

      <div>
        <label for="hometown_box">
          Hometown
        </label>

        <textarea id="hometown_box" name="query_hometown"><%= @the_user.hometown %></textarea>
      </div>

      <button>
        Update user
      </button>
    </form>
  </div>
</div>

<hr>
